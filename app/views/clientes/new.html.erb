<h1>New Cliente</h1>

<%= render 'form', cliente: @cliente %>

<%= link_to 'Back', clientes_path %>


<script>
	$('#cliente_nit').blur(function() {
		var nit= $(this).val();
		$.get( "/consumo/"+nit, function( data ) {
	        console.log( data);
	         
	        if (data.nombre!='Nit no valido') {
	        	$('#cliente_nombre').val(data.nombre);
	        	$('#cliente_direccion').val(data.direccion_completa);
	        }else{
	        	$('#cliente_nombre').val(data.nombre);
	        	$('#cliente_direccion').val('');
	        }
	      });
	});
</script>